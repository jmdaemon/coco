\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{figm}[2021/10/20 Provides common macros for including new images]

\RequirePackage[inkscapepath=build]{svg}
\newcommand\newsubfig[3] {
\begin{subfigure}{0.5\textwidth}
    \includegraphics[width=\linewidth]{#1}
    \caption{#2}
    \label{#3}
\end{subfigure}
}

\newcommand\subsvg[3] {
\begin{subfigure}{0.5\textwidth}
    \includesvg[width=#3\linewidth, height=#3\linewidth]{#1}
    \caption{#2}
\end{subfigure}
}

\newcommand\newfig[2] {
\begin{figure}[!htpb]
    \centering
    \includesvg[width=0.5\linewidth, height=0.5\linewidth]{#1}
    \caption{#2}
\end{figure}
}
