\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{shortmath}[2023/01/17 Useful shorthand macros for typesetting maths]

\RequirePackage{mathtools, amsmath, amsthm, amssymb, amsfonts}
\RequirePackage{bm}

% Number Sets
\newcommand\enablenumbersets{
    \renewcommand\O{\ensuremath{\emptyset}}
    \newcommand\N{\ensuremath{\mathbb{N}}}
    \newcommand\W{\ensuremath{\mathbb{W}}}
    \newcommand\Z{\ensuremath{\mathbb{Z}}}
    \newcommand\Q{\ensuremath{\mathbb{Q}}}
    \newcommand\R{\ensuremath{\mathbb{R}}}
    \newcommand\C{\ensuremath{\mathbb{C}}}
}

% Set Theory
\newcommand*\powerset[1]{\mathcal{P} (#1)}

% Relations
\newcommand\rel{\mathrel{R}}
\newcommand\nrel{\not \mathrel{R}}

%%% Functions
\newcommand*\from{\colon}
\newcommand*\fn[3]{#1 \from #2 \to #3}
\newcommand*\fnmap[3]{#1 \from #2 \mapsto #3}

% Number Systems
% Used to insert a space in long vertical additions/subtractions
\newcommand*{\carry}[1][1]{\overset{#1}}
\newcolumntype{B}[1]{r*{#1}{@{\,}r}}

% Logic
\newcommand\enablelogic{
    \providecommand{\lbicond}{\Leftrightarrow}  % Biconditional
    \providecommand{\lxor}{\veebar}             % Exclusive Or
    \newcommand*{\lsim}{\mathord{\sim}}         % Use 'tilde' as not symbol with proper spacing
}

% Options
% Enable any of the following options when using this package:
\DeclareOption{numbersets}{\enablenumbersets}
\DeclareOption{logic}{\enablelogic}
\DeclareOption*{\PackageWarning{mmac}{Unknown '\CurrentOption'}}
\ProcessOptions\relax
