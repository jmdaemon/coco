% Section
\newcommand\sect[1] {
\section*{#1}
}

\newcommand\subsect[1] {
\subsection*{#1}
}

% Question
\newcommand\q[1]{
\subsection*{Q#1}
}

% Commands

% Centered Title
\newcommand\ctitle[1] {
\begin{center}
    \section*{#1}
\end{center}
}

% Alphanumeric Enums
\newlist{litem}{enumerate}{5}
\setlist[litem]{leftmargin=0.5cm, label=(\alph*)}

% Arbitrary alphanumeric character list
\newcommand\alist[1]{
\begin{enumerate}[leftmargin=0.5cm]
    \item[(#1)]
\end{enumerate}
}

% Circled Numbers
\newcommand*\circled[1]{\tikz[baseline=(char.base)]{
            \node[shape=circle,draw,inner sep=1pt] (char) {#1};}}

% Mini circle for figures
\newcommand\mc[1]{\footnotesize\circled{#1}}

% Markdown inline `code` formatting
\DefineVerbatimEnvironment{Highlighting}{Verbatim}{breaklines,commandchars=\\\{\}}

\definecolor{bgcolor}{HTML}{E0E0E0}
\let\oldtexttt\texttt
% Use \code{Text}
\newcommand{\code}[1]{\begingroup\setlength{\fboxsep}{1pt}\colorbox{bgcolor}{\oldtexttt{\hspace*{2pt}\vphantom{A}#1\hspace*{2pt}}}\endgroup}
\renewcommand{\texttt}[1]{\code{\relscale{.7}\oldtexttt{#1}}}

